@model List<Electronic>
@{
    int counter = 0;

}
<div class="container">
    <div class="row">
         <div class="col-4">
             <a asp-action="Create" class="btn btn-primary">Create</a>
</div>
        <div class="col-12">
            <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Privce</th>
      <th scope="col">ImageUrl</th>
        <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
                    @foreach (var electronic in Model)
                    {
                        <tr>
      <th scope="row">@counter++</th>
      <td>@electronic.Id</td>
      <td>@electronic.Title</td>
      <td>@electronic.Privce</td>
      <td>
       <img src="~/uploads/electronic.ImageUrl" width="100" height="100" />

      </td>
      <td>
       <a asp-action="Update" asp-route-id="@electronic.Id" class="btn btn-warning">Update</a>
           <a asp-action="DeletePost" asp-route-id="@electronic.Id" class="btn btn-danger">Delete</a>
      </td>
    </tr>

  
   

          }
    
  
  </tbody>
</table>
        </div>
    </div>
</div>